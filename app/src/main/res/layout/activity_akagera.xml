<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AkageraActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/akagera_id"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="200dp"
            android:background="@drawable/akagerapark"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/akagera_id"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="akagera national park"
                android:padding="25dp"
                android:textColor="#FF5733"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_title"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="20dp"
                        android:text="Description"
                        android:layout_marginBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/largest_national_park"
                        android:paddingLeft="20dp"
                        android:drawableLeft="@drawable/mountain"
                        android:drawablePadding="3dp"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_location"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="20dp"
                        android:text="Location"
                        android:layout_marginBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/located_in_eastern"
                        android:paddingLeft="20dp"
                        android:drawableLeft="@drawable/location"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:drawablePadding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_kilometers"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="20dp"
                        android:text="Kilometre from Kigali"
                        android:layout_marginBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/_111km_from_kigali"
                        android:paddingLeft="20dp"
                        android:drawableLeft="@drawable/gps"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:drawablePadding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_link"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="20dp"
                        android:text="Website"
                        android:layout_marginBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/link"
                        android:text="@string/https_www_akageranationalpark_org"
                        android:paddingLeft="20dp"
                        android:drawableLeft="@drawable/link"
                        android:drawablePadding="3dp"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_phone"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="12dp"
                card_view:cardCornerRadius="15dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="20dp"
                        android:text="Phone"
                        android:layout_marginBottom="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/phone"
                        android:text="@string/_250782166015"
                        android:paddingLeft="20dp"
                        android:drawableLeft="@drawable/phonenumbers"
                        android:drawablePadding="3dp"
                        android:textColor="#6C6B6A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </RelativeLayout>
</ScrollView>